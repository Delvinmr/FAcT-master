@model IEnumerable<FAcT.Models.Provincia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_provincia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pais.nombre_pais)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.provinciaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.provinciaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.provinciaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
